<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Calculator" verbose="1" parallel="methods" thread-count="4">

    <groups>
        <run>
            <include name="long"/>
            <include name="double"/>
        </run>
    </groups>
    <listeners>
        <listener class-name="testng.Listeners.Listener"/>
    </listeners>

    <test name="Sum test"  >
        <classes>
            <class name = "testng.SumLongTest"/>
            <class name = "testng.SumDoubleTest"/>
        </classes>
    </test>

    <test name="Sub test #1">
        <parameter name="var1" value="2"/>
        <parameter name="var2" value="3"/>
        <parameter name="expected" value="-1"/>

        <classes>
            <class name = "testng.SubTest"/>
        </classes>
    </test>
    <test name="Sub test #2">
        <parameter name="var1" value="3"/>
        <parameter name="var2" value="0"/>
        <parameter name="expected" value="3"/>

        <classes>
            <class name = "testng.SubTest"/>
        </classes>
    </test>
    <!-- test only for double values subtraction -->
    <test name="Sub test #3">
        <parameter name="var1" value="3.55"/>
        <parameter name="var2" value="7.5"/>
        <parameter name="expected" value="-3.95"/>
        <classes>
            <class name = "testng.SubTest">
                <methods>
                    <include name="dSub.*"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Mult test" >
        <classes>
            <class name = "testng.MultTest">
                <methods>
                    <include name=".*Test"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Div Double Test" >
        <classes>
            <class name = "testng.DivDoubleTest">
            </class>
        </classes>
    </test>
    <test name="Div Long Test" >
        <classes>
            <class name = "testng.DivLongTest">
            </class>
        </classes>
    </test>
    <test name="Div Zero Test" >
        <classes>
            <class name = "testng.DivZeroTest">
            </class>
        </classes>
    </test>
    <test name="Pow Test" >
        <classes>
            <class name = "testng.PowTest">
            </class>
        </classes>
    </test>
    <test name="Sqrt Test" >
        <classes>
            <class name = "testng.SqrtTest">
            </class>
        </classes>
    </test>
    <test name="Tan Test" >
        <classes>
            <class name = "testng.TgTest">
            </class>
        </classes>
    </test>
    <test name="Ctg Test" >
        <classes>
            <class name = "testng.CtgTest">
            </class>
        </classes>
    </test>
    <test name="Cos Test" >
        <classes>
            <class name = "testng.CosTest">
            </class>
        </classes>
    </test>
    <test name="Sinus Test" >
        <classes>
            <class name = "testng.SinTest">
            </class>
        </classes>
    </test>
    <test name="IsPositive Test" >
        <classes>
            <class name = "testng.IsPositiveTest">
            </class>
        </classes>
    </test>
    <test name="IsNegative Test" >
        <classes>
            <class name = "testng.IsNegativeTest">
            </class>
        </classes>
    </test>

</suite>
